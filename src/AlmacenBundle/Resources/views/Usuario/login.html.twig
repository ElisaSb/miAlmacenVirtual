{% extends "AlmacenBundle::layout.html.twig" %}

{% block content %}

    <div class="col-lg-4">
        <h2 style="margin-top: 10px;">Identifícate</h2>
        {# {{path("login_check", {"email":email}) }} #}
        <form action="{{ path('login_check') }}" method="post">
            <label>Email:</label>
            <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            <br/>
            <label>Contraseña:</label>
            <input type="password" id="password" name="_password" class="form-control"/>
            <br/>
            {# <a class="btn btn-success btn-sm" href="{{path("login_check", {"email":email}) }}">Entrar</a>#}
            <input type="submit" value="Entrar" class="btn btn-success"/>
            <input type="hidden" name="_target_path" value="/login"/>
        </form>

        <br/>
        <a href="{{ path("registro") }}">Quiero registrarme</a>

    </div>

    <br/>

    {% if app.user != null %}
        {{ dump(app.user) }}
    {% endif %}

