{% extends "AlmacenBundle::layout.html.twig" %}

{% block content %}
    <div class="col-lg-6">
        <h2 style="margin-top: 10px;">Editar producto: {{ producto.nombre }}</h2>

        {% if app.session.flashbag().get('status_error') is defined %}
            {% for message in app.session.flashbag().get("status_error") %}
                {% if message != "" %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endif %}
            {% endfor %}
        {% endif %}

        {{ form_start(form, {"enctype":"multipart/form-data"}) }}
        <label>Imagen:</label>
        <img width="100" src="{{ asset("uploads/"~producto.img) }}"/>
        {{ form_widget(form.img) }}

        <label>Etiquetas: </label>
        {% set etiquetas_clean = etiquetas|trim(",") %}
        {{ form_widget(form.etiquetas, {'value':etiquetas_clean}) }}
        {{ form_end(form) }}
    </div>

    <div class="clearfix"></div>

{% endblock %}